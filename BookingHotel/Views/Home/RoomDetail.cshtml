<div class="hero-wrap" style="background-image: url('@Url.Content("~/templateuser/images/bg_3.jpg")');">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text d-flex align-itemd-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center d-flex align-items-end justify-content-center">
                <div class="text">
                    <p class="breadcrumbs mb-2"><span class="mr-2"><a asp-controller="Home" asp-action="Index">Home</a></span> <span class="mr-2"><a asp-controller="Home" asp-action="OurRooms">Rooms</a></span> <span>Rooms Single</span></p>
                    <h1 class="mb-4 bread">Rooms Details</h1>
                </div>
            </div>
        </div>
    </div>
</div>
@model BookingHotel.Models.RoomType

<section class="ftco-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-md-12 ftco-animate">
                        <div class="single-slider owl-carousel">
                            @foreach (var item in Model.RoomTypeDetail.Images)
                            {
                                <div class="item">
                                    <div class="room-img" style="background-image: url('@Html.DisplayFor(modelItem => item.imagePath)');"></div>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="col-md-12 room-single mt-4 mb-5 ftco-animate">
                        <h2 class="mb-4">@Html.DisplayFor(model => model.roomTypeName) <span>- (@Html.DisplayFor(model => model.roomLeft) Available rooms)</span> - $@Html.DisplayFor(model => model.price)</h2>
                        <p>@Html.DisplayFor(model => model.RoomTypeDetail.description)</p>
                        <div class="d-md-flex mt-5 mb-5">
                            <ul class="list">
                                <li><span>Max:</span> @Html.DisplayFor(model => model.RoomTypeDetail.maxPeople) Persons</li>
                                <li><span>Size:</span> @Html.DisplayFor(model => model.RoomTypeDetail.size) m2</li>
                            </ul>
                            <ul class="list ml-md-5">
                                <li><span>View:</span> @Html.DisplayFor(model => model.RoomTypeDetail.view)</li>
                                <li><span>Bed:</span> @Html.DisplayFor(model => model.RoomTypeDetail.bed)</li>
                            </ul>
                        </div>
                        <p>Please be advised that as the Hotel is a heritage building, guestrooms and suites within the same 
                            category are uniquely configured. The room image may not correspond to the actual room received.</p>
                    </div>
                    <div class="col-md-12 room-single ftco-animate mb-5 mt-4">
                        <div class="block-16">
                            <h5>Room Highlights</h5><br>
                            <p>@Html.DisplayFor(model => model.RoomTypeDetail.Service.roomHighlights)</p>
                            <h5>Bed & Bath</h5><br>
                            <p>@Html.DisplayFor(model => model.RoomTypeDetail.Service.bedAndBath)</p>
                            <h5>Services & Amennities</h5><br>
                            <p>@Html.DisplayFor(model => model.RoomTypeDetail.Service.servicesAndAmenities)</p>
                        </div>
                    </div>  
                </div>
            </div> <!-- .col-md-8 -->

        </div>
    </div>
</section> <!-- .section -->
