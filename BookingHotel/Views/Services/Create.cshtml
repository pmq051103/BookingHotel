@model BookingHotel.Models.Service

@{
    ViewData["Title"] = "Create";
    Layout = "_ManagementLayout";
}
<link href="~/css/create.css" rel="stylesheet" />
<h1>Create</h1>

<h4>Service</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="roomHighlights" class="control-label"></label>
                <input asp-for="roomHighlights" class="form-control" />
                <span asp-validation-for="roomHighlights" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="bedAndBath" class="control-label"></label>
                <input asp-for="bedAndBath" class="form-control" />
                <span asp-validation-for="bedAndBath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="servicesAndAmenities" class="control-label"></label>
                <input asp-for="servicesAndAmenities" class="form-control" />
                <span asp-validation-for="servicesAndAmenities" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="roomTypeDetailID" class="control-label"></label>
                <select asp-for="roomTypeDetailID" class ="form-control" asp-items="ViewBag.roomTypeDetailID"></select>
            </div>
            <div class="form-group btn">
                <button type="submit" class="btn btn-primary mr-2 btn-icon">Create</button>|
                <a asp-action="Index" class="btn btn-secondary btn-icon mr-2"> 
                    <i class="fas fa-list"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
