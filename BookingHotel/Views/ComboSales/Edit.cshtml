@model BookingHotel.Models.ComboSale

@{
    ViewData["Title"] = "Edit";
    Layout = "_ManagementLayout";
}

<h1>Edit</h1>
<link href="~/css/create.css" rel="stylesheet" />
<h4>ComboSale</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="comboSaleID" />
            <div class="form-group">
                <label asp-for="title" class="control-label"></label>
                <input asp-for="title" class="form-control" />
                <span asp-validation-for="title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="genre" class="control-label"></label>
                <select asp-for="genre" class="form-control" asp-items="new SelectList(ViewBag.GenreList)"></select>
                <span asp-validation-for="genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShortContent" class="control-label"></label>
                <textarea asp-for="ShortContent" class="form-control" rows="2"></textarea>
                <span asp-validation-for="ShortContent" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="content" class="control-label"></label>
                <textarea asp-for="content" class="form-control" rows="10"></textarea>
                <span asp-validation-for="content" class="text-danger"></span>

            </div>
            <br>
            <div class="form-group">

                <label asp-for="image" class="control-label"></label>
                <input type="file" id="upimage" name="upimage" accept="image/*" />
                <span asp-validation-for="image" class="text-danger"></span>
                @if (Model.image != null)
                {
                    <img src="~/hinhanhsale/@Model.image" style="width:100px;height:100px;" />
                }

            </div>

            <div class="form-group">
                <label asp-for="price" class="control-label"></label>
                <input asp-for="price" class="form-control" />
                <span asp-validation-for="price" class="text-danger"></span>
            </div>
            <div class="mt-4">
                <input type="submit" value="Save" class="btn btn-primary btn-icon" /> |
                <a asp-action="Index" class="btn btn-secondary btn-icon mr-2">
                    <i class="fas fa-list"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
