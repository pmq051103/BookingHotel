
@if (!User.IsInRole("1"))
{
    <script>
        window.location.href = '@Url.Action("Index", "Home")';
    </script>
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"]</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<link href="https://fonts.googleapis.com/css?family=Nunito+Sans:200,300,400,600,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/TemplateUser/css/open-iconic-bootstrap.min.css">
    <link rel="stylesheet" href="~/TemplateUser/css/animate.css">

    <link rel="stylesheet" href="~/TemplateUser/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/TemplateUser/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/TemplateUser/css/magnific-popup.css">

    <link rel="stylesheet" href="~/TemplateUser/css/aos.css">

    <link rel="stylesheet" href="~/TemplateUser/css/ionicons.min.css">

    <link rel="stylesheet" href="~/TemplateUser/css/bootstrap-datepicker.css">
    <link rel="stylesheet" href="~/TemplateUser/css/jquery.timepicker.css">


    <link rel="stylesheet" href="~/TemplateUser/css/flaticon.css">
    <link rel="stylesheet" href="~/TemplateUser/css/icomoon.css">
    <link rel="stylesheet" href="~/TemplateUser/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>
<body>


<style>
        .sidebar {
            height: 100%;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

            .sidebar ul {
                padding-left: 0;
            }

            .sidebar .list-group-item {
                border: none;
                padding: 15px;
                font-size: 16px;
            }

           .sidebar .list-group-item a {
                text-decoration: none;
                color: #000;
                display: block;
                transition: all 0.3s ease;
          }

         .sidebar .list-group-item a:hover {
              background-color: #007bff;
              color: #fff;
              padding-left: 20px;
         }

        .main-content {
            padding: 20px;
        }
</style>

<!--Nabar-->
    <nav class="navbar navbar-expand-lg navbar-dark ftco_navbar bg-dark ftco-navbar-light" id="ftco-navbar">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Habor<span>Light</span></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#ftco-nav" aria-controls="ftco-nav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="oi oi-menu"></span> Menu
            </button>

            <div class="collapse navbar-collapse" id="ftco-nav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link">Home</a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Home" asp-action="OurRooms" class="nav-link">Our Rooms</a>
                    </li>

                    <li class="nav-item"><a asp-controller="Home" asp-action="Restaurant" class="nav-link">Restaurant</a></li>
                    <li class="nav-item"><a asp-controller="Home" asp-action="About" class="nav-link">About Us</a></li>


                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Hello, @User.Identity.Name
                            </a>
                            
                            <div class="dropdown-menu" aria-labelledby="userDropdown">
                                <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="ChangePassword">Change Password</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
                            </div>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Account
                            </a>
                            <div class="dropdown-menu" aria-labelledby="userDropdown">
                                <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                            </div>
                        </li>
                    }
                </ul>
            </div>

        </div>
    </nav>
    <!-- END nav -->
    <div class="hero-wrap" style="background-image: url('@Url.Content("~/templateuser/images/bg_3_coppy.jpg")'); height:100px">
       
    </div>

    <div class="container1 d-flex">
    <div class="sidebar col-md-2 p-3 bg-light">
        <ul class="list-group">
            <li class="list-group-item"><a asp-area="" asp-controller="AccountsUser" asp-action="Index">Accounts Management</a></li>
            <li class="list-group-item"><a asp-area="" asp-controller="Rooms" asp-action="Index">Rooms Management</a></li>
            <li class="list-group-item"><a asp-area="" asp-controller="RoomTypes" asp-action="Index">Room Types Management</a></li>
            <li class="list-group-item"><a asp-area="" asp-controller="RoomTypeDetails" asp-action="Index">Room Type Details Management</a></li>
            <li class="list-group-item"><a asp-area="" asp-controller="RoomTypeImages" asp-action="Index">Room Type Images Management</a></li>
            <li class="list-group-item"><a asp-area="" asp-controller="Services" asp-action="Index">Serviecs Management</a></li>
            <li class="list-group-item"><a asp-area="" asp-controller="Request" asp-action="Index">Requests Management</a></li>
            <li class="list-group-item"><a asp-area="" asp-controller="ComboSales" asp-action="Index">Combo Sales Management</a></li>
                <li class="list-group-item"><a asp-area="" asp-controller="Menus" asp-action="Index">Menus Management</a></li>
        </ul>
    </div>
    <!-- Nội dung chính -->
    <div class="main-content col-md-10">
        @RenderBody()
    </div>
    
</div>

    <script src="~/TemplateUser/js/jquery.min.js"></script>
    <script src="~/TemplateUser/js/jquery-migrate-3.0.1.min.js"></script>
    <script src="~/TemplateUser/~/TemplateUser/js/popper.min.js"></script>
    <script src="~/TemplateUser/js/bootstrap.min.js"></script>
    <script src="~/TemplateUser/js/jquery.easing.1.3.js"></script>
    <script src="~/TemplateUser/js/jquery.waypoints.min.js"></script>
    <script src="~/TemplateUser/js/jquery.stellar.min.js"></script>
    <script src="~/TemplateUser/js/owl.carousel.min.js"></script>
    <script src="~/TemplateUser/js/jquery.magnific-popup.min.js"></script>
    <script src="~/TemplateUser/js/aos.js"></script>
    <script src="~/TemplateUser/js/jquery.animateNumber.min.js"></script>
    <script src="~/TemplateUser/js/bootstrap-datepicker.js"></script>
    <script src="~/TemplateUser/js/scrollax.min.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBVWaKrjvy3MaE7SQ74_uJiULgl1JY0H2s&sensor=false"></script>
    <script src="~/TemplateUser/js/google-map.js"></script>
    <script src="~/TemplateUser/js/main.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>