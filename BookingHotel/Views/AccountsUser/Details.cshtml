@model BookingHotel.Models.Account

@{
    Layout = "_ManagementLayout";
    ViewData["Title"] = "Details";
}
<link href="~/css/create.css" rel="stylesheet" />
<h1 class="mb-4">Account Details</h1>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Account</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-3">Username</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.username)</dd>

            <dt class="col-sm-3">Password</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.password)</dd>

            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.name)</dd>

            <dt class="col-sm-3">Phone Number</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.phoneNumber)</dd>

            <dt class="col-sm-3">Role</dt>
            <dd class="col-sm-9">
                @if (Model.role == 0)
                {
                    <text>User</text>
                }
                else if (Model.role == 1)
                {
                    <text>Admin</text>
                }
            </dd>
        </dl>

        <div class="mt-4">
            <a asp-action="Edit" asp-route-id="@Model?.accountID" class="btn btn-warning btn-icon">Edit</a> |
            <a asp-action="Index" class="btn btn-secondary btn-icon mr-2">
                <i class="fas fa-list"></i> Back to List
            </a>
        </div>
    </div>
</div>
